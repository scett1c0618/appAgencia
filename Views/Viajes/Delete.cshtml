@model app1.Models.Viaje
@{
    ViewData["Title"] = "Eliminar Viaje";
}
<h2>Eliminar Viaje</h2>
<div class="alert alert-danger">¿Estás seguro que deseas eliminar este viaje?</div>
<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>
    <dt class="col-sm-2">Departamento</dt>
    <dd class="col-sm-10">@Model.DepartamentoId</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
