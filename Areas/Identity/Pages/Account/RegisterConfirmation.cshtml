@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de Registro - Agencia de Viajes";
}
<div class="container py-5" style="min-height:80vh; background: linear-gradient(120deg, var(--color-secundario) 0%, var(--color-gris) 100%);">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="/img/logo/logo-viajes.png" alt="Agencia de Viajes" style="max-width:80px;">
                        <h2 class="fw-bold mt-2">¡Registro exitoso!</h2>
                        <p class="text-muted">Gracias por registrarte. Para completar tu registro, confirma tu correo electrónico.</p>
                    </div>
                    @if (Model.DisplayConfirmAccountLink)
                    {
                        <div class="alert alert-info text-center">
                            <p>Esta aplicación no tiene un servicio de correo real configurado. Consulta <a href="https://aka.ms/aspaccountconf" target="_blank">estas instrucciones</a> para configurar un emisor de correos.</p>
                            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary btn-lg rounded-pill shadow-sm mt-3">Confirmar mi cuenta</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success text-center">
                            <p>Por favor, revisa tu correo electrónico y sigue el enlace de confirmación para activar tu cuenta.</p>
                        </div>
                    }
                    <div class="text-center mt-4">
                        <a href="/Identity/Account/Login" class="fw-bold" style="color:#1e3c72;">Volver a iniciar sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

