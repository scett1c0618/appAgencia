@page
@model dynamic
@{
    ViewData["Title"] = "Confirmación de Email - Agencia de Viajes";
}
<div class="container py-5" style="min-height:80vh; background: linear-gradient(120deg, var(--color-secundario) 0%, var(--color-gris) 100%);">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="/img/logo/logo-viajes.png" alt="Agencia de Viajes" style="max-width:80px;">
                        <h2 class="fw-bold mt-2">¡Email confirmado!</h2>
                        <p class="text-muted">Tu correo electrónico ha sido verificado exitosamente. Ahora puedes iniciar sesión y disfrutar de nuestros servicios.</p>
                    </div>
                    <div class="text-center mt-4">
                        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg rounded-pill shadow-sm">Iniciar sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
